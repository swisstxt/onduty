<div class="row">
  <content class="col-md-9" role="main">
    <div class="page-header">
      <h1>Settings</h1>
    </div>

    <div class="col-md-6">
      <h3>Settings</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Settings</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th>
                <b>Twilio Number</b>
              </th>
              <td>
                <%= formated_phone(settings.twilio_from_number) rescue 'n/a' %>
              </td>
            </tr>
            <tr>
              <th>
                <b>Email Sender</b>
              </th>
              <td>
                <%= settings.email_sender rescue 'n/a' %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-md-6">
        <h3>Plugins</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @plugins.each do |plugin_name| -%>
              <% plugin = Onduty.const_get(plugin_name).new(Onduty::Alert.new) -%>
              <tr>
                <th><b><%= plugin_name %></b></th>
                <td>
                  <% if settings.notification_plugins.include? plugin_name %>
                    <% if plugin.valid_configuration? -%>
                      <span class="label label-success">Ready</span>
                    <% else -%>
                      <span class="label label-danger">Missing Options</span>
                    <% end -%>
                  <% else %>
                  <span class="label label-default">Disabled</span>
                  <% end %>
                </td>
              </tr>
            <% end -%>
          </tbody>
        </table>
    </div>

    <hr>
    <a class="pull-right" href="/debug">debug info</a>

  </content>
</div>
