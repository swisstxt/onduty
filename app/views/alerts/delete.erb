<div class="page-header">
  <h1>Alert <%= @alert.topic %></h1>
</div>

<form role="form" class="form-horizontal col-md-12" action="/alerts/<%= @alert.id %>/delete" method='post'>
  <input name="_method" type="hidden" value="delete" />
  <input name="confirm_delete" type="hidden" value="1" />
  <div class="alert alert-danger" role="alert">
    <h4>
      Please confirm that you want to delete alert with ID <%= @alert.id %>.
    </h4>
  </div>
  <div class="form-group">
    <div class="col-sm-9">
      <a href="/alerts<%= alerts_link_filter %>" class="btn btn-primary">Cancel</a>
      <button type="submit" class="btn btn-danger"><%= @title %></button>
    </div>
  </div>
</form>
