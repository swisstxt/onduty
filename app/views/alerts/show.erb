<% if authorized? -%>
  <div class="page-header">
    <h1>Alert details</h1>
  </div>

  <table class="table table-striped" style="width: 65%;">
    <tr>
      <th>Name</th>
      <td><%= @alert.name %></td>
    </tr>
    <tr>
      <th>Message</th>
      <td><%= @alert.message %></td>
    </tr>
    <tr>
      <th>Group</th>
      <td>
        <% if @alert.group -%>
          <a href="/groups/<%= @alert.group_id %>" ><%= @alert.group.name %></a>
        <% else -%>
          -
        <% end -%>
      </td>
    </tr>
    <tr>
      <th>UID</th>
      <td><%= @alert.uid %></td>
    </tr>
    <tr>
      <th>Affected Services</th>
      <td>
        <ul>
        <% @alert.services.each do |service| -%>
          <li>
            <a href="<%= service.icinga2_host_link(settings.icinga2_web) %>" target="blank">
              <%= service.host %>
            </a> -
            <a href="<%= service.icinga2_service_link(settings.icinga2_web) %>" target="blank">
              <%= service.name %>
            </a>
          </li>
        <% end -%>
        </ul>
      </td>
    </tr>
    <tr>
      <th>Alert-Count</th>
      <td>
        <span class="badge"><%= @alert.count %></span>
      </td>
    </tr>
    <tr>
      <th>Created at</th>
      <td><%= @alert.created_at %></td>
    </tr>
    <tr>
      <th>Updated at</th>
      <td><%= @alert.updated_at %></td>
    </tr>
    <tr>
      <th>Acknowledged at</th>
      <td>
        <% if @alert.acknowledged_at -%>
          <span class="glyphicon glyphicon-ok">&nbsp;</span>
          <%= @alert.acknowledged_at %>
        <% else %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Last alerted at</th>
      <td>
        <% if @alert.last_alert_at -%>
          <%= @alert.last_alert_at %>
        <% else %>
          <span class="glyphicon glyphicon-remove"></span>
        <% end %>
      </td>
    </tr>
  </table>

  <hr>
  <a href="/alerts<%= alerts_link_filter %>" class="btn btn-default">Back</a>
  <a href="/alerts/<%= @alert.id %>/delete" class="btn btn-danger">Delete</a>


  <form action="/alerts/<%= @alert.id %>/acknowledge?uid=<%= @alert.uid %>" method="post" style="display: inline-block">
    <button type="submit" class="btn btn-success">Acknowledge</button>
  </form>
  <% if settings.notification_plugins.size > 0 -%>
  <form action="/alerts/<%= @alert.id %>/alert" method="post" style="display: inline-block">
    <button type="submit" class="btn btn-primary">Trigger Alert</button>
  </form>
    <% if @alert.last_alert_at -%>
    <form action="/alerts/<%= @alert.id %>/alert/2" method="post" style="display: inline-block">
      <button type="submit" class="btn btn-danger">Escalate</button>
    </form>
    <% end -%>
  <% end -%>
<% end -%>
