<div class="row">
  <content class="col-md-9" role="main">
    <h1 class="page-header"><%= @title %></h1>
    <form role="form" class="form-horizontal col-md-8" action="/alerts/<%= @method %>" method='POST'>

      <div class="form-group">
        <label for="host" class="col-sm-2 control-label">Host</label>
        <div class="col-sm-10">
          <input name="alert[host]" id="host" placeholder="Host" class="form-control" value="<%= @alert.host if @alert %>">
        </div>
      </div>

      <div class="form-group">
        <label for="service" class="col-sm-2 control-label">Service</label>
        <div class="col-sm-10">
          <input name="alert[service]" id="service" placeholder="Service" class="form-control" value="<%= @alert.service if @alert %>">
        </div>
      </div>

      <div class="form-group">
        <label for="message" class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
          <textarea name="alert[message]" type='text' id="message" rows="5" placeholder="Message" class="form-control"></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <a href="/alerts" class="btn btn-primary">Cancel</a>
          <button type="submit" class="btn btn-danger"><%= @title %></button>
        </div>
      </div>
    </form>
  </content>
</div>
