<div class="row">
  <content class="col-md-9" role="main">
    <h1 class="page-header"><%= @title %></h1>
    <form role="form" class="form-horizontal col-md-10" action="/groups/<%= @method %>" method='POST'>

      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input name="group[name]" id="name" placeholder="Name" class="form-control" value="<%= @group.name if @group %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <a href="/groups" class="btn btn-primary">Cancel</a>
          <button type="submit" class="btn btn-danger"><%= @title %></button>
        </div>
      </div>
    </form>
  </content>
</div>
