<div class="page-header">
  <h1><%= @contact.name %></h1>
</div>

<form role="form" class="form-horizontal col-md-4" action="/contacts/<%= @contact.id %>/delete" method='post'>
  <input name="_method" type="hidden" value="delete" />
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox" name="confirm_delete" value="1"> I confirm that i want to delete <%= @contact.name %>
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href="/contacts" class="btn btn-primary">Cancel</a>
      <button type="submit" class="btn btn-danger"><%= @title %></button>
    </div>
  </div>

</form>
