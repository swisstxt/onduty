<h1 class="page-header">Login</h1>

<div class="row">
  <form role="form" class="form-horizontal col-md-8" action='/auth/login' method='post'>
    <div class="form-group">
      <label for="api_key" class="col-sm-2 control-label">API Key</label>
      <div class="col-sm-8">
        <input name="api_key" id="api_key" placeholder="API Key" class="form-control">
      </div>
    </div>

    <div class="form-group">
      <label for="api_secret" class="col-sm-2 control-label">API Secret</label>
      <div class="col-sm-8">
        <input name="api_secret" id="api_secret" placeholder="API Secret" class="form-control">
      </div>
    </div>

    <div class="form-group">
      <label for="api_secret" class="col-sm-2 control-label">Captcha</label>
      <div class="col-sm-8">
        <%= 
          recaptcha_tag :ajax,
            ssl: true,
            display: {theme: 'clean'} 
        %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-danger">Login</button>
      </div>
    </div>
  </form>
</div>