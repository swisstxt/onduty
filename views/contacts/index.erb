<div class="page-header">
  <h1>On Duty Contacts</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @contacts.each do |contact| %>
    <tr>
      <td>
        <form action="/contacts/<%= contact.id %>/status" method="post" style="display: inline-block">
          <div class="btn-group btn-group-xs">
            <% if contact.status && contact.status == 1 %>
              <button type="button" class="btn btn-danger" class="btn btn-sm btn-danger">OnDuty</button>
            <% else %>
              <button type="submit" class="btn btn-default" name="status" value='1'>OnDuty</button>
            <% end %>
            <% if contact.status && contact.status == 2 %>
              <button type="button" class="btn btn-primary">Escalation</button>
            <% else %>
              <button type="submit" class="btn btn-default" name="status" value='2'>Escalation</button>
            <% end %>
          </div>
        </form>
      </td>
      <td><%= contact.name %></td>
      <td><%= contact.phone %></td>
      <td>
        <a href="/contacts/<%= contact.id %>/edit" class="btn btn-sm btn-success">Edit</a>
        <form action="/contacts/delete/<%= contact.id %>" method="post" style="display: inline-block">
          <input name="_method" type="hidden" value="delete" />
          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<p>
  <a type="button" class="btn btn-success" href="/contacts/new">
    New Contact
  </a>
</p>
