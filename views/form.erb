<div class="row">
  <content class="col-md-9" role="main">
    <h1 class="page-header"><%= @title %></h1>
    <form role="form" class="form-horizontal col-md-8" action='/<%= @action %>' method='<%= @method %>'>
      <div class="form-group">
        <label for="host" class="col-sm-2 control-label">Host</label>
        <div class="col-sm-6">
          <% unless @no_select %>
            <select name="host" id="host" class="form-control">
              <option>Select a host...</option>
              <% @hosts.each do |host| %>
                <option><%= host %></option>
              <% end %>
            </select>
          <% else %>
            <input name="host" id="host" placeholder="Host" class="form-control">
          <% end %>
        </div>
        <div class="col-sm-4">
          <% unless @no_select %>
            <a href='/<%= @action %>/i' class="pull-right">
              <span class="glyphicon glyphicon-refresh"></span>
              change to input field
            </a>
          <% else %>
            <a href='/<%= @action %>' class="pull-right">
              <span class="glyphicon glyphicon-refresh"></span>
              change to select field
            </a>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <label for="path" class="col-sm-2 control-label">Path</label>
        <div class="col-sm-10">
          <input name="path" id="path" placeholder="Path" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-danger"><%= @action.capitalize %></button>
        </div>
      </div>
    </form>
  </content>
</div>