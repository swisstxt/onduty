<div class="page-header">
  <h1>Alerts</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Created At</th>
      <th>Message</th>
      <th>Acknowledged At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
<% @alerts.each do |alert| %>
    <tr>
      <td><b><a href="/alerts/<%= alert.id %>"><%= alert.id %></a></b></td>
      <td><b><a href="/alerts/<%= alert.id %>"><%= alert.created_at %></a></b></td>
      <td><%= alert.message %></td>
      <td><%= alert.acknowledged_at %></td>
      <td>
        <a href="/alerts/<%= alert.id %>" class="btn btn-sm btn-primary">Show</a>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<p>
  <a type="button" class="btn btn-success" href="/alerts/new">
    New Alert
  </a>
</p>
